package com.gridstone.screens;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Screen;
import com.badlogic.gdx.assets.AssetManager;
import com.badlogic.gdx.graphics.GL20;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.Sprite;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;

public class MainMenu implements Screen {

	private SpriteBatch mainMenuBatch;
	private Sprite mainMenuSprite;
	
	@Override
	public void render(float delta) {
		//Gdx.app.log("Splash", "Render");
		
		Gdx.gl.glClearColor(0, 0, 0, 1);
		Gdx.gl.glClear(GL20.GL_COLOR_BUFFER_BIT);
		
		mainMenuBatch.begin();
		mainMenuSprite.draw(mainMenuBatch);
		mainMenuBatch.end();
	}

	@Override
	public void resize(int width, int height) {
		//Gdx.app.log("Splash", "resize");
	}

	@Override
	public void show() {
		//Gdx.app.log("Splash", "Show");
		
		AssetManager assetManager = new AssetManager();
		mainMenuBatch = new SpriteBatch();
		
		assetManager.load("images/screens/menu/main/Main_Menu.png",Texture.class);
		assetManager.finishLoading();
		
		Texture mainMenuTexture = assetManager.get("images/screens/menu/main/Main_Menu.png",Texture.class);
		mainMenuSprite = new Sprite(mainMenuTexture);
		mainMenuSprite.setSize(Gdx.graphics.getWidth(), Gdx.graphics.getHeight());
	}

	@Override
	public void hide() {
		//Gdx.app.log("Splash", "Hide");
	}

	@Override
	public void pause() {
		//Gdx.app.log("Splash", "pause");
	}

	@Override
	public void resume() {
		//Gdx.app.log("Splash", "resume");
	}

	@Override
	public void dispose() {
		//Gdx.app.log("Splash", "dispose");
	}

}
